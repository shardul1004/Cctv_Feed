FROM debian:bullseye-slim

# Install everything in one go, then clean up apt lists
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      wget \
      ca-certificates \
      tar \
      ffmpeg \
      curl \
 && rm -rf /var/lib/apt/lists/*

# Download and install MediaMTX (ARM64)
RUN wget -O mediamtx.tar.gz \
      https://github.com/bluenviron/mediamtx/releases/latest/download/mediamtx_linux_arm64.tar.gz \
 && tar -xzf mediamtx.tar.gz \
 && mv mediamtx /usr/local/bin/ \
 && rm mediamtx.tar.gz

WORKDIR /app
COPY mediamtx.yml .

# EXPOSE is informational in host mode
EXPOSE 8554    
EXPOSE 8501    

CMD ["mediamtx", "mediamtx.yml"]
